<div class="new_comment">
    <%= form_for :comment, url: user_post_comments_path(current_user.id, post.id) do |f| %>
    <p>
      <%= f.text_area :content, size: "50x2", placeholder: "Comment" %>
    </p>
    <p>
      <% f.hidden_field :post_id, value: post.id %>
    </p>
    <p>
      <%= f.submit "Post Comment" %>
    </p>
    <% end %>
</div>
